block content

	.page

		include blocks/header.pug
		
		.content

			section.welcome 

				.welcome__bg 
					img(src="img/welcome_bg.jpg", alt="")
				.welcome__cube-1
					img(src="img/cube.svg", alt="").js-parallaxMouse(data-speed="1000")
				.welcome__cube-2
					img(src="img/cube.svg", alt="").js-parallaxMouse(data-speed="1000")
				.welcome__cube-3
					img(src="img/cube.svg", alt="").js-parallaxMouse(data-speed="1000")
				.welcome__cube-4
					img(src="img/cube.svg", alt="").js-parallaxMouse(data-speed="1000" data-revers="true")

				.wrapper 
					.welcome__content 
						.welcome__logo 
							picture 
								source(media="(max-width: 768px)", srcset="img/logo_welcome-mob.svg")
